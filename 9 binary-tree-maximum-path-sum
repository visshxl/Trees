question:-https://leetcode.com/problems/binary-tree-maximum-path-sum/
class Solution {
public:
    int recursiveSol(TreeNode* root, int& maxi){
        if(root==nullptr) return 0;

        int leftsum=max(0, recursiveSol(root->left, maxi));
        int rightsum=max(0, recursiveSol(root->right, maxi)); 
        maxi=max(maxi,(leftsum+rightsum+root->val));

        return root->val+max(rightsum, leftsum);
    }

    int maxPathSum(TreeNode* root) {
        int maxi=INT_MIN;
        recursiveSol(root, maxi);
        return maxi;
    }
};
// striver's tree playlist
